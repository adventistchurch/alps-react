{
  "name": "alps-react",
  "version": "1.15.4",
  "private": false,
  "author": {
    "name": "General Conference of Seventh-day Adventists"
  },
  "contributors": [
    {
      "name": "Eduardo Ludi",
      "email": "eduardo.ludi@stimme-der-hoffnung.de"
    },
    {
      "name": "Olivier Guy",
      "email": "olivier.guy@stimme-der-hoffnung.de"
    }
