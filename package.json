  "license": "SEE LICENSE IN LICENSE",
  "description": "React implementation of the Adventist Living Pattern System (ALPS)",
  "repository": "git@github.com:adventistchurch/alps-react.git",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "dependencies": {
    "react-lazyload": "^3.0.0"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup --config",
    "dev": "rollup --config --watch",
    "storybook": "start-storybook -p 9001 -s ./public -c .storybook --ci",
    "sb": "yarn storybook",
    "deploy": "npm run-script build && npm publish",
    "deploy:patch": "npm version patch && npm run deploy",
    "deploy:minor": "npm version minor && npm run deploy",
    "deploy:major": "npm version major && npm run deploy",
    "build-storybook": "build-storybook -s public -o .storybook-build",
    "deploy-storybook": "storybook-to-ghpages"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@storybook/addon-essentials": "^6.0.21",
    "@storybook/addon-knobs": "^6.0.21",
    "@storybook/react": "^6.0.21",
    "@storybook/storybook-deployer": "^2.8.6",
    "@whitespace/storybook-addon-html": "^2.0.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "eslint": "^7.7.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rollup": "^2.26.8",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^7.0.1",
    "storybook-addon-jsx": "^7.3.4",
    "webpack": "^4.44.1"
  },
  "peerDependencies": {
    "react": "^16.9.x",
    "react-dom": "^16.9.x"
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": "react-app"
  }
